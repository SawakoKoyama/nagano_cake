<h1>商品詳細</h1>

  <%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg' %>

  <h4>商品名</h4>
  <%= @item.name %>
  <h4>商品説明</h4>
  <%= @item.introduction %>

  <h4>ジャンル</h4>
  <%= @item.genre.name %>

  <h4>税込価格（税抜価格）</h4>
  <%= @item.price %>

  <h4>販売ステータス</h4>
  <% if @item.is_active %>
    <td>販売中</td>
  <% else %>
    <td>販売停止中</td>
  <% end %>

  <%= link_to "編集する", admin_items_path %>

