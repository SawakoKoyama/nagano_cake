<div class="container">
<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre,url: admin_genres_path, local: true do |f| %>
  <h4>ジャンル名</h4>
  <%= f.text_field :name %>


  <p><%= f.submit '新規登録', class:"btn btn-success" %></p>

<% end %>

<head></head>
  <body>
    <header></header>
    <main>
      <h2>ジャンル一覧</h2>
      <table class="genres">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
                      <tr>
                        <td><%= genre.name %></td>
                        <td><%= link_to "編集", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
                      </tr>
          <% end %>
        </tbody>
      </table>

    </main>
  </body>
</div>