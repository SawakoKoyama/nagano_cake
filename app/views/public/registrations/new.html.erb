

      <div class="container">


<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  名前<div class="field">
    <%= f.label :last_name, '(性)' %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <span><%= f.label :first_name, '(名)' %></span>
    <span><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></span>
  </div>

  フリガナ<div class="field">
    <span><%= f.label :last_name_kana, '(セイ)' %></span>
    <span><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></span>
    <span><%= f.label :first_name_kana, '(メイ)' %></span>
    <span><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></span>
  </div>

  <div class="field">
    <span><%= f.label :email, 'メールアドレス' %></span>
    <span><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
  </div>

  <div class="field">
    <span><%= f.label :postal_code, '郵便番号（ハイフンなし）' %></span>
    <span><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></span>
  </div>

  <div class="field">
    <span><%= f.label :address, '住所' %></span>
    <span><%= f.text_field :address, autofocus: true, autocomplete: "address" %></span>
  </div>

  <div class="field">
    <span><%= f.label :telephone_number, '電話番号（ハイフンなし）' %></span>
    <span><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></span>
  </div>

  <div class="field">
    <span><%= f.label :password, 'パスワード（６文字以上）' %></span>
    <% if @minimum_password_length %>
    <% end %>
    <span><%= f.password_field :password, autocomplete: "new-password" %></span>
  </div>

  <div class="field">
    <span><%= f.label :password_confirmation, 'パスワード（確認用）' %></span>
    <span><%= f.password_field :password_confirmation, autocomplete: "new-password" %></span>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

<h4>既に登録済みの方</h4>
<p>
  <%= link_to "こちら", new_customer_session_path %>からログインしてください。
</p>
</div>
