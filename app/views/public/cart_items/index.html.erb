
  <head></head>
  <body>
    <header></header>
    <main>
      <h2>ショッピングカート</h2>
      <table class="items">
        <%= link_to "カートを空にする" %>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
                      <tr>
                        <td><%= cart_item.item.name %></td>
                        <td><%= cart_item.item.price %></td>
                         <%= form_with model: @cart_item,url: public_cart_items_create_path, local: true do |f| %>
                        <td>
                          <%= f.select :amount, [1,2,3,4,5,6,7,8,9], class: 'sample' %>
                          <%= f.submit '変更' %>
                          <% end %>
                        </td>

                        <td><%= link_to "削除する" %></td>
                      </tr>

          <% end %>
        </tbody>
      </table>

        <%= link_to "買い物を続ける", public_root_path %>
        <%= link_to "情報入力に進む", new_public_order_path %>
    </main>
  </body>
