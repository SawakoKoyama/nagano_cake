<head></head>
  <body>
    <header></header>
    <main>
      <h2>注文履歴一覧</h2>
      <table class="orders">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
                      <tr>
                        <td><%= order.updated_at %></td>
                        <td><%= order.address %></td>
                        <td><%= order.name %></td>
                        <td><%= order.total_payment %></td>
                        <td><%= order.status %></td>
                        <td><%= link_to "表示する", public_order_path(order.id) %></td>
                      </tr>
          <% end %>
        </tbody>
      </table>

    </main>
  </body>
