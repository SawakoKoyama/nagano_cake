<h1>配送先登録/一覧</h1>

<%= form_with model: @address,url: public_addresses_path, local: true do |f| %>
  <h4>郵便番号（ハイフンなし）</h4>
  <%= f.text_field :postal_code %>
  <h4>住所</h4>
  <%= f.text_area :address %>
  <h4>宛名</h4>
  <%= f.text_field :name %>


  <p><%= f.submit '新規登録' %></p>

<% end %>

<head></head>
  <body>
    <header></header>
    <main>
      <table class="addresses">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
                      <tr>
                        <td><%= address.postal_code %></td>
                        <td><%= address.address %></td>
                        <td><%= address.name %></td>
                        <td>
                          <%= link_to "編集する", edit_public_address_path(address.id) %>
                          <%= link_to "削除する", public_addresses_path, method: :delete %>
                        </td>
                      </tr>
          <% end %>
        </tbody>
      </table>

    </main>
  </body>
